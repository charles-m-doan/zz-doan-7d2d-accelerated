<configs>
	<!-- Modify Stack Counts for all Items -->
	<set xpath="/items/item/property[@name='Stacknumber' and @value &gt; 1]/@value">64000</set>

	<!-- Modify Item Modifier Slot Count To Match Quality Level -->
	<set
		xpath="/items/item[starts-with(@name, 'meleeTool')]/effect_group[starts-with(@name, 'meleeTool')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[starts-with(@name, 'meleeWpn')]/effect_group[starts-with(@name, 'meleeWpn')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[starts-with(@name, 'gunHandgun')]/effect_group[starts-with(@name, 'gunHandgun')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[starts-with(@name, 'gunShotgun')]/effect_group[starts-with(@name, 'gunShotgun')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[starts-with(@name, 'gunRifle')]/effect_group[starts-with(@name, 'gunRifle')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[starts-with(@name, 'gunMGT')]/effect_group[starts-with(@name, 'gunMGT')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[starts-with(@name, 'gunExplosives')]/effect_group[starts-with(@name, 'gunExplosives')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[starts-with(@name, 'gunBow')]/effect_group[starts-with(@name, 'gunBow')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[starts-with(@name, 'gunBot')]/effect_group[starts-with(@name, 'gunBot')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[starts-with(@name, 'armor')]/effect_group[contains(@name, 'armor')]/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>

	<!-- Mod Slot Changes For Clothing -->
	<set
		xpath="/items/item[@name='apparelArmyPants' or @name='apparelArmyShirt']/effect_group/passive_effect[@name='ModSlots']/@value">
		3</set>
	<set
		xpath="/items/item[starts-with(@name, 'apparel')]/effect_group/passive_effect[@name='ModSlots' and @value='1']/@value">
		2</set>
	<set
		xpath="/items/item[starts-with(@name, 'apparel')]/effect_group/passive_effect[@name='ModSlots' and @value='0']/@value">
		1</set>

	<!-- ++++++++++++++++++++++++++ BALANCE_CHANGES ++++++++++++++++++++++++++ -->

	<!-- Bandana Buff -->
	<append xpath="/items/item[@name='apparelBandana']/effect_group">
		<passive_effect name="StaminaChangeOT" operation="perc_add" value=".10" tags="running" />
		<passive_effect name="Mobility" operation="perc_add" value=".01" />
		<passive_effect name="NoiseMultiplier" operation="perc_add" value="-.05" />
		<passive_effect name="RunSpeed" operation="perc_add" value=".1" />
	</append>

	<!-- BDU Buffs -->
	<append xpath="/items/item[@name='apparelArmyPants' or @name='apparelArmyShirt']/effect_group">
		<passive_effect name="RunSpeed" operation="perc_add" value=".15" />
		<passive_effect name="Mobility" operation="perc_add" value=".01" />
		<passive_effect name="GeneralDamageResist" operation="base_add" value="0.04" />
	</append>

	<!-- Remove mobility/stamina/noise penalties and add run speed buff on leather armors -->
	<set
		xpath="/items/item/effect_group[@name='leather armor']/passive_effect[@name='Mobility' or @name='StaminaChangeOT' or @name='NoiseMultiplier']/@value">
		0</set>
	<append xpath="/items/item/effect_group[@name='leather armor']">
		<passive_effect name="RunSpeed" operation="perc_add" value=".05" />
	</append>

	<!-- Remove mobility/stamina/noise penalties and add run speed buff on military armors -->
	<set
		xpath="/items/item/effect_group[@name='military armor']/passive_effect[@name='Mobility' or @name='StaminaChangeOT' or @name='NoiseMultiplier']/@value">
		0</set>
	<append xpath="/items/item/effect_group[@name='military armor']">
		<passive_effect name="RunSpeed" operation="perc_add" value=".05" />
	</append>

	<!-- Buff Military Stealth Boots -->
	<set
		xpath="/items/item[@name = 'armorMilitaryStealthBoots']/effect_group[@name='military without penalties']/passive_effect[@name='ModSlots']/@value">
		1,2,3,4,5,6</set>
	<set
		xpath="/items/item[@name = 'armorMilitaryStealthBoots']/effect_group[@name='military without penalties']/passive_effect[@name='Mobility']/@value">
		0.1</set>
	<append
		xpath="/items/item[@name = 'armorMilitaryStealthBoots']/effect_group[@name='military without penalties']">
		<passive_effect name="RunSpeed" operation="perc_add" value=".2" />
		<passive_effect name="NoiseMultiplier" operation="perc_add" value="-.15" />
	</append>

	<!-- Forge Melt Times -->
	<set xpath="/items/item/property[@name='MeltTimePerUnit']/@value">0.2</set>

	<!-- Crucible -->
	<append xpath="/items/item[@name='toolForgeCrucible']">
		<effect_group tiered="false">
			<passive_effect name="CraftingTime" operation="perc_add" value="-.333" />
			<passive_effect name="CraftingSmeltTime" operation="perc_add" value="-.333" />
		</effect_group>
	</append>

</configs>