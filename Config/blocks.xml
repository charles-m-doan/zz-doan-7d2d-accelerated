		xpath="/blocks/block[@name='goreBlockHumanBones']/drop[@event='Harvest' and @name='resourcePotassiumNitratePowder']/@count">
		20</set>
	<set
		xpath="/blocks/block[@name='goreBlockHumanBones']/drop[@event='Destroy' and @name='resourceBone']/@count">
