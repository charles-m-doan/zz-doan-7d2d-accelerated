<configs>

	<!-- Modify Stack Counts for all Blocks -->
	<set xpath="/blocks/block/property[@name='Stacknumber' and @value &gt; 1]/@value">6400</set>

	<!-- Modify Stack Counts for Shape Blocks -->
	<append xpath="/blocks/block[@name='frameShapes']">
		<property name="Stacknumber" value="6400" />
	</append>
	<append xpath="/blocks/block[@name='woodFrameBlock']">
		<property name="Stacknumber" value="6400" />
	</append>
	<append xpath="/blocks/block[@name='cobblestoneShapes']">
