	<!-- =============== HEATMAP MODIFICATIONS =============== -->
	<!-- HeatMapStrength: The Percentage of heat an event will contribute from the block. -->
	<!-- HeatMapTime: The time or Number of 'ticks', until an event expires. -->
	<!-- HeatMapFrequency: The time or Number of 'ticks', between heat event creations. -->

	<!-- campfire -->
	<!-- Original values: 5, 5000, 1000 -->
	<set xpath="/blocks/block[@name='campfire']/property[@name='HeatMapStrength']/@value">.5</set>
	<set xpath="/blocks/block[@name='campfire']/property[@name='HeatMapTime']/@value">1000</set>
	<set xpath="/blocks/block[@name='campfire']/property[@name='HeatMapFrequency']/@value">10000</set>
	<!-- forge -->
	<!-- Original values: 6, 5000, 1000 -->
	<set xpath="/blocks/block[@name='forge']/property[@name='HeatMapStrength']/@value">.6</set>
	<set xpath="/blocks/block[@name='forge']/property[@name='HeatMapTime']/@value">1000</set>
	<set xpath="/blocks/block[@name='forge']/property[@name='HeatMapFrequency']/@value">10000</set>
